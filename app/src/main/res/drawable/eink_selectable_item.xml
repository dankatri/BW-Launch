<?xml version="1.0" encoding="utf-8"?>
<!--
    E-INK OPTIMIZED SELECTOR
    
    No ripple effects - they cause ghosting on e-ink displays.
    Uses solid color change for pressed state instead.
    Pure colors with no transparency for maximum contrast.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state: solid gray (no transparency) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/eink_pressed_light" />
        </shape>
    </item>
    
    <!-- Focused state: same as pressed for accessibility -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/eink_pressed_light" />
        </shape>
    </item>
    
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/eink_pressed_light" />
        </shape>
    </item>
    
    <!-- Default state: transparent -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
